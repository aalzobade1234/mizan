name: Build J2ME

on:
  push:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v3

    - name: Install Java 8
      uses: actions/setup-java@v3
      with:
        distribution: 'temurin'
        java-version: '8'

    - name: Install Ant
      run: sudo apt update && sudo apt install ant -y

    - name: Download J2ME Libraries
      run: |
        mkdir lib
        wget https://raw.githubusercontent.com/ferbar/b2g-installer/master/lib/cldcapi.jar -O lib/cldcapi.jar
        wget https://raw.githubusercontent.com/ferbar/b2g-installer/master/lib/midpapi.jar -O lib/midpapi.jar

    - name: Build Project
      run: ant

    - name: Upload JAR
      uses: actions/upload-artifact@v3
      with:
        name: J2ME-App
        path: dist/MizanApp.jar